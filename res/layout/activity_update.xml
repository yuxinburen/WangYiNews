<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity" >

    <TextView
        android:id="@+id/txt_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:drawableLeft="@drawable/night_bobo_back"
        android:gravity="center_vertical"
        android:text="个人资料"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:text="用户名:"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
        	android:gravity="right"
        	android:text="昵     称:"
        	android:textSize="20sp"/>
        
        <EditText
        android:id="@+id/edt_username_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:gravity="bottom"
        android:hint="6到18个字符,字母开头"
        android:paddingLeft="5dp" />
    </LinearLayout>

    

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
        	android:gravity="right"
        	android:text="性     别:"
        	android:textSize="20sp"/>
        
        <EditText
        android:id="@+id/edt_sex_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:gravity="bottom"
        android:hint=" M代表男       W代表女"
        android:paddingLeft="5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="#600f"
        android:text="确认提交"
        android:textColor="#5fff"
        android:textSize="20sp" />

</LinearLayout>