<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_rightmenu_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#000" >

        <TextView
            android:id="@+id/home_channel_bar_portrait"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="120dp"
            android:text="用户中心"
            android:gravity="center"
            android:textColor="#fff"
            android:clickable="true"
            android:drawableTop="@drawable/home_channel_bar_portrait" />

         <TextView
            android:id="@+id/night_user_reading_circle"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="个人资料"
            android:clickable="true"
            android:drawableTop="@drawable/night_user_reading_circle" />

        <TextView
            android:id="@+id/plugin_icon_app"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="收藏"
            android:clickable="true"
            android:drawableTop="@drawable/plugin_icon_app" />

        <TextView
            android:id="@+id/night_usercenter_hd_edit"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="跟帖"
            android:clickable="true"
            android:drawableTop="@drawable/night_usercenter_hd_edit" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/txt_font_type"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="字体设置"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="#4000"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/night_settingcell_arrow"
            android:layout_marginRight="5dp"/>
        
        <TextView
            android:id="@+id/txt_font_size"
            android:paddingRight="20dp"
            android:paddingLeft="20dp" 
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="正文字号"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="#4000"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/night_settingcell_arrow"
            android:layout_marginRight="5dp"/>
        
        <TextView 
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="头条推送"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="#4000"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/font_cell_bar_left"
            android:layout_marginRight="5dp"/>
        
        <TextView
            android:id="@+id/txt_cache"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="清除缓存"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="#4000"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>
        <TextView 
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="评分"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="#4000"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/night_settingcell_arrow"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/txt_feedback"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="反馈"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="#4000"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/night_settingcell_arrow"
            android:layout_marginRight="5dp"/>
        
        <TextView
            android:id="@+id/txt_exit"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="注销登陆"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="#4000"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/night_settingcell_arrow"
            android:layout_marginRight="5dp"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/night_pluginboard_icon_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="头条"
            android:gravity="center"
            android:textColor="#000"
            android:clickable="true"
            android:drawableTop="@drawable/night_pluginboard_icon_headline" />

        <TextView
            android:id="@+id/night_pluginboard_icon_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="消息"
            android:gravity="center"
            android:textColor="#000"
            android:clickable="true"
            android:drawableTop="@drawable/night_pluginboard_icon_message" />

        <TextView
            android:id="@+id/night_pluginboard_icon_mailbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="邮件"
            android:gravity="center"
            android:textColor="#000"
            android:clickable="true"
            android:drawableTop="@drawable/night_pluginboard_icon_mailbox" />

        <TextView
            android:id="@+id/night_pluginboard_icon_public"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="公益"
            android:gravity="center"
            android:textColor="#000"
            android:clickable="true"
            android:drawableTop="@drawable/night_pluginboard_icon_public" />

        <TextView
            android:id="@+id/night_icon_reward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="彩票"
            android:gravity="center"
            android:textColor="#000"
            android:clickable="true"
            android:drawableTop="@drawable/night_icon_reward" />
    </LinearLayout>

</LinearLayout>