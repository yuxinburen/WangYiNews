<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/img_news"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableLeft="@drawable/biz_navigation_tab_news"
        android:gravity="center"
        android:text="新闻"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" 
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/img_reading"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableLeft="@drawable/biz_navigation_tab_read"
        android:gravity="center"
        android:text="订阅"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/img_picture"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableLeft="@drawable/biz_navigation_tab_pics"
        android:gravity="center"
        android:text="图片"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/img_video"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableLeft="@drawable/biz_navigation_tab_video"
        android:gravity="center"
        android:text="视频"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/img_follow"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableLeft="@drawable/biz_navigation_tab_ties"
        android:gravity="center"
        android:text="跟帖"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

</LinearLayout>